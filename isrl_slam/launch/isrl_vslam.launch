<launch>
  <!-- isrl robot model -->
  <include file="$(find isrl_urdf)/launch/isrl_bringup.launch"/>

  <!-- lidar -->
  <include file="$(find rplidar_ros)/launch/rplidar_a3.launch"/>

  <!-- odometry -->
  <node pkg="isrl_odom2" name="isrl_odom2_node" type="isrl_odom2_node"/>
 
  <!-- imu 
  <include file="$(find e2box_imu)/launch/e2box_imu.launch" />
  -->

  <arg name="database_path" default="/home/isrl-orin1/Documents/rtabmap.db"/>
  <arg name="localization" default="false"/>
  <arg name="with_camera" default="true"/>
  <arg name="wait_for_transform" default="0.2"/>
  <arg name="device_type_camera" default=""/>
  <arg name="serial_no_camera" default=""/>
  <arg name="camera" default="camera"/>
  <arg name="clip_distance" default="-2"/>
  <arg name="rviz" default="true"/>
  <arg name="rtabmapviz" default="true"/>

  <arg if="$(arg localization)" name="args" default=""/>
  <arg unless="$(arg localization)" name="args" default="--delete_db_on_start"/>

  <!--<include file="$(find realsense2_camera)/launch/rs_camera.launch">
      <arg name="device_type" value="$(arg device_type_camera)"/>
      <arg name="serial_no" value="$(arg serial_no_camera)"/>
      <arg name="camera" value="$(arg camera)"/>
      <arg name="clip_distance" value="$(arg clip_distance)"/>
      <arg name="align_depth" value="true"/>
      <arg name="enable_pointcloud" value="true"/>
  </include>-->

  <!-- Navigation stuff (move_base) -->
  <include file="$(find isrl_navi)/launch/move_base.launch"/>

  <!-- Mapping -->
  <group ns="rtabmap">
    <node name="rtabmap" pkg="rtabmap_slam" type="rtabmap" output="screen" args="$(arg args)">
      <param name="database_path" type="string" value="$(arg database_path)"/>
      <param name="frame_id" type="string" value="base_footprint"/>
      <param name="odom_frame_id" type="string" value="odom"/>
      <param name="wait_for_transform_duration" type="double" value="$(arg wait_for_transform)"/>
      <param name="queue_size" type="int" value="30"/>
      <param name="approx_sync" type="bool" value="true"/>
      <param name="subscribe_depth" type="bool" value="true"/>
      <param name="subscribe_scan" type="bool" value="true"/>

      <!-- inputs -->
      <remap from="scan" to="/scan"/>
      <remap from="rgb/image" to="/zed_node/rgb/image_rect_color"/>
      <remap from="depth/image" to="/zed_node/depth/depth_registered"/>
      <remap from="rgb/camera_info" to="/zed_node/rgb/camera_info"/>

      <!-- output -->
      <remap from="grid_map" to="/map"/>

      <!-- RTAB-Map's parameters -->
      <param name="RGBD/NeighborLinkRefining" type="string" value="true"/>
      <param name="RGBD/ProximityBySpace" type="string" value="true"/>
      <param name="RGBD/ProximityByTime" type="string" value="false"/>
      <param name="RGBD/ProximityPathMaxNeighbors" type="string" value="10"/>
      <param name="Reg/Strategy" type="string" value="2"/>
      <param name="Vis/MinInliers" type="string" value="12"/>
      <param name="RGBD/OptimizeFromGraphEnd" type="string" value="false"/>
      <param name="RGBD/OptimizeMaxError" type="string" value="3"/>
      <param name="Reg/Force3DoF" type="string" value="true"/>
      <param name="Grid/FromDepth" type="string" value="false"/>
      <param name="Mem/STMSize" type="string" value="30"/>
      <param name="RGBD/LocalRadius" type="string" value="5"/>
      <param name="Icp/CorrespondenceRatio" type="string" value="0.4"/>

      <!-- localization mode -->
      <param if="$(arg localization)" name="Mem/IncrementalMemory" type="string" value="false"/>
      <param unless="$(arg localization)" name="Mem/IncrementalMemory" type="string" value="true"/>
      <param name="Mem/InitWMWithAllNodes" type="string" value="$(arg localization)"/>
    </node>

    <!-- visualization with rtabmapviz -->
    <node if="$(arg rtabmapviz)" pkg="rtabmap_ros" type="rtabmapviz" name="rtabmapviz" args="-d $(find rtabmap_ros)/launch/config/rgbd_gui.ini" output="screen">
      <param name="subscribe_scan" type="bool" value="true"/>
      <param name="subscribe_odom" type="bool" value="true"/>
      <param name="frame_id" type="string" value="base_footprint"/>
      <param name="approx_sync" type="bool" value="true"/>

      <remap from="odom" to="/base_controller/odom"/>
      <remap from="scan" to="/scan"/>
      <remap from="rgb/image" to="/zed_node/rgb/image_rect_color"/>
      <remap from="depth/image" to="/zed_node/depth/depth_registered"/>
      <remap from="rgb/camera_info" to="/zed_node/rgb/camera_info"/>
    </node>
  </group>

  <!-- rviz -->
  <node if="$(arg rviz)" pkg="rviz" type="rviz" name="rviz" args="-d $(find isrl_slam)/rviz/vslam.rviz" output="screen"/>
  
  <!--include file="$(find zed_nodelet_example)/launch/zed_laserscan_nodelet.launch"/-->
</launch>
